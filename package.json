  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.2",
    "@types/node": "^13.7.5",
    "@types/pg": "^7.14.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
